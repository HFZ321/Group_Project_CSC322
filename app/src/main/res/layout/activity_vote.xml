<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".VoteActivity">


    <Button
        android:id="@+id/button2"
        android:layout_width="405dp"
        android:layout_height="102dp"
        android:layout_below="@id/button1"
        android:layout_marginTop="20dp"
        android:background="#B192EA"
        android:text="VIP" />

    <Button
        android:id="@+id/button4"
        android:layout_width="405dp"
        android:layout_height="102dp"
        android:layout_below="@id/button3"
        android:layout_marginTop="20dp"
        android:background="#50C0F3"
        android:text="Group Member" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:fontFamily="sans-serif-light"
        android:text="Vote"
        android:textColor="#5324FF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.035" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView7"
        android:layout_marginEnd="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="10dp"
        android:entries="@array/features"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button1"
        android:layout_width="405dp"
        android:layout_height="102dp"
        android:layout_below="@id/spinner"
        android:layout_marginTop="20dp"
        android:background="#DA93E6"
        android:text="Super User" />

    <Button
        android:id="@+id/button3"
        android:layout_width="405dp"
        android:layout_height="102dp"
        android:layout_below="@id/button2"
        android:layout_marginTop="20dp"
        android:background="#647AF4"
        android:text="Group" />


</RelativeLayout>