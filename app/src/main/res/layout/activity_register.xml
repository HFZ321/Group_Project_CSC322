<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <EditText
        android:id="@+id/edname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textReg"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:focusable="true"
        android:hint="Enter Name"
        android:textColorHighlight="#50514E"
        android:textColorHint="#504B4F" />

    <EditText
        android:id="@+id/edcredential"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textReg"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="231dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginRight="-2dp"
        android:focusable="true"
        android:hint="Enter Credentials"
        android:textColorHighlight="#50514E"
        android:textColorHint="#504B4F" />

    <EditText
        android:id="@+id/edreference"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textReg"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="184dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginRight="-1dp"
        android:focusable="true"
        android:hint="Enter Reference"
        android:textColorHighlight="#50514E"
        android:textColorHint="#504B4F" />

    <EditText
        android:id="@+id/edinterest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textReg"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="134dp"
        android:layout_marginEnd="-3dp"
        android:layout_marginRight="-3dp"
        android:focusable="true"
        android:hint="Enter Interest"
        android:textColorHighlight="#50514E"
        android:textColorHint="#504B4F" />

    <EditText
        android:id="@+id/edemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textReg"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginRight="-1dp"
        android:focusable="true"
        android:hint="Enter Email"
        android:textColorHighlight="#50514E"
        android:textColorHint="#504B4F" />

    <TextView
        android:id="@+id/textReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Registration"
        android:textColor="#0728E3"
        android:textSize="75dp" />

    <EditText
        android:id="@+id/edUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textReg"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="-1dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="278dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:focusable="true"
        android:hint="Enter Username"
        android:textColorHighlight="#50514E"
        android:textColorHint="#504B4F" />

    <EditText
        android:id="@+id/edPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edUsername"
        android:layout_alignEnd="@+id/edUsername"
        android:layout_alignRight="@+id/edUsername"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="#504B4F" />

    <EditText
        android:id="@+id/edConfirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edPassword"
        android:layout_alignEnd="@+id/edPassword"
        android:layout_alignRight="@+id/edPassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textColorHint="#504B4F" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edConfirmPassword"
        android:layout_centerHorizontal="true"
        android:text="Register" />

    <Button
        android:id="@+id/btnGoToLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnRegister"
        android:layout_centerHorizontal="true"
        android:text="Login" />


</RelativeLayout>